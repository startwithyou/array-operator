   <script>
//Replace first occurance
    const string = prompt('Enter a string: ');
// replace the characters
    const newText = string.replace('r', 'b');
    console.log(newText);  
    document.write(newText+"<br>");
//Replace charcter
    const regex = /r/g;
const newText1 = string.replace(regex, 'b');
// display the result
console.log(newText1);
document.write(newText1);
</script>
